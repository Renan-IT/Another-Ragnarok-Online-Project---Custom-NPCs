/*    Advanced MOTD Hourly Script
    Created by: Aeromesi

    Idea from: Alexandria

    Built for Hercules

    Version 1.0

    Special Feature: Randomized messages so that you'll never see the same message!
    Edit .@ServName$ variable to your servers name

    Comments: To add more messages, change .@msgrand = (1,10) to your desired # of messages.
    Also add the new messages in the if checks.

    Example:

    if (.@msgrand == 10)
{
    announce "Keep up the fun here at  "+ .@ServName$+"!",bc_self;
    initnpctimer;
    end;
} // Add under here

    if (.@msgrand == 11)
{
    announce "This is message 11! You added another message!",bc_self;
    initnpctimer;
    end;
}
*/
prontera,1,2,1    script    MOTD_HOURLY    139,{
OnPCLoginEvent:
    initnpctimer("MOTD_HOURLY"),OnTimer3600000;
end;

OnTimer3600000:
        @cid = getcharid(0);
        @aid = getcharid(3);
if( attachrid( @aid ) )
    if( getcharid(0) == @cid ) 
{
    .@msgrand = rand(1,14);
     .@ServName$ = "YourRO";
if (.@msgrand == 1)
{
    announce "J'J'espère que vous vous amusez bien sur le serveur "+ .@ServName$+"!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 2)
{
    announce "N'oubliez pas de regarder les dernières news du serveur "+ .@ServName$+", vous pouvez les voir sur le site ou le forum pour plus d'information!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 3)
{
    announce "N'oubliez pas, jouer de trop longue période peut causer de sérieux problèmes de santé, prenez une pause ! "+ .@ServName$+" peut attendre!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 4)
{
    announce "Tapez @commands pour voir la liste des commandes qui vous seront utile pendant votre aventure !",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 5)
{
    announce "N'oubliez pas de regarder le forum et/ou le site pour voir les dernières mise à jour de "+ .@ServName$+"!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 6)
{
    announce "N'oubliez pas, un GM ne vous demandera jamais votre login et votre mot de passe, soyez prudent.",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 7)
{
    announce "Rappel : Hackeur, Botteur, Exploiteur de bugs sera puni ! Ce n'est PAS toléré sur "+ .@ServName$+".",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 8)
{
    announce " "+ .@ServName$+" est vraiment heureux d'avoir une si bonne communauté !",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 9)
{
    announce "N'oubliez pas de voter pour que la communauté s'aggrandisse et gagner des points !",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 10)
{
    announce "Amusez-vous bien sur "+ .@ServName$+"!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 11)
{
    announce "Vous pouvez consulter vos quêtes avec la commande alt+u!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 12)
{
    announce "N'oubliez pas, le chat #party est là pour vous aider à organiser des teams!",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 13)
{
    announce "Les chats disponible : #Allié, #Party",bc_self;
    initnpctimer;
    end;
}
if (.@msgrand == 14)
{
    announce "Si vous avez des suggestions pour améliorer le serveur, proposez les sur le forum à l'adresse https://www.yourserveur.fr/forum!",bc_self;
    initnpctimer;
    end;
}
} else
dispbottom "not attached";
end;
}
